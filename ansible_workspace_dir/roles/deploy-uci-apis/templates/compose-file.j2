version: '3.7'

services:
  {{ docker_service_name }}:
    image: {{ docker_hub_url }}/{{ image_name }}:{{ tag }}
    hostname: {{ docker_service_name }}
    env_file:
      - {{ env_file_deployment_location }}
    command:
      - /bin/bash
      - -c
      - |
        curl -L https://github.com/hasura/graphql-engine/raw/stable/cli/get.sh | bash
        cd migrations/uci-core/
        pwd
        hasura migrate apply --endpoint http://uci-api-db-gql:8080
        echo "Server Started"
        cd ../../
        pm2-runtime app.js
    
    {% if publish_ports == true %}

    ports:
      - {{ host_port }}:{{ docker_port }}
      
    {% endif %}
    
    networks:
      application_default:
        aliases:
            - {{ network_alias_name }}

networks:
  application_default:
    external: true
